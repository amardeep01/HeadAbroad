<style type="text/css">
	table
	{
		width:400px;
		margin-left:auto;
		margin-right:auto;
	}
	td{
		height:30px !important;
		overflow:hidden;
	}
	tr:nth-child(odd)
	{
		background:#e5e5e5;
		color:#444;
	}
	tr:nth-child(even)
	{
		background:#444;
		color:#e5e5e5;
	}
	.container{
		width:100%;
	}
	.center{
		width:95%;
		margin:0 auto;
	}
	.row{
		width:100%;
		height:40px;
		margin-top:10px;
		overflow:hidden;
		border:1px solid #000;
	}
	.col{
		float:left;
		width:5.45%;
		height:40px;
		font-size:13px;
		word-wrap:break-word;
		padding:2px 6px;
		border-right:1px solid #000;
	}
	.two{
		font-size:10px;
	}
</style>
<h1>University#list</h1>
<p>Find me in app/views/university/list.html.erb</p>

<div class="container">
	
	<div class="center">
		<% @university.each do |university| %>

		<div class="row">
			<div class="col">
				<%= university.id %>
			</div>
			<div class="col">
				<%= university.name %>
			</div>
			<div class="col two">
				<%= university.description %>
			</div>
			<div class="col">
				<%= university.contact %>
			</div>
			<div class="col">
				<%= university.email %>
			</div>
			<div class="col">
				<%= university.acceptance_ratio %>
			</div>
			<div class="col">
				<%= university.address %>
			</div>
			<div class="col">
				<%= university.city %>
			</div>
			<div class="col">
				<%= university.state %>
			</div>
			<div class="col">
				<%= university.country %>
			</div>
			<div class="col">
				<%= university.pin %>
			</div>
			<div class="col">
				<%= university.rating %>
			</div>
			<div class="col">
				<%= university.logo %>
			</div>
			<div class="col">
				<%= link_to("Delete",{:action=>'delete',:id=>university.id}) %>
			</div>
			<div class="col">
			<%= link_to("Edit",{:action=>'edit',:id=>university.id}) %>
			</div>
		</div>
		<% end %>
	</div>
</div>
