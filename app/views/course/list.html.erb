<style type="text/css">
	table
	{
		width:400px;
		margin-left:auto;
		margin-right:auto;
	}
	td{
		height:30px !important;
		overflow:hidden;
	}
	tr:nth-child(odd)
	{
		background:#e5e5e5;
		color:#444;
	}
	tr:nth-child(even)
	{
		background:#444;
		color:#e5e5e5;
	}
	.container{
		width:100%;
	}
	.center{
		width:95%;
		margin:0 auto;
	}
	.row{
		width:100%;
		height:40px;
		margin-top:10px;
		overflow:hidden;
		border:1px solid #000;
	}
	.col{
		float:left;
		width:2.30%;
		height:40px;
		font-size:13px;
		word-wrap:break-word;
		padding:2px 6px;
		border-right:1px solid #000;
	}
	.two{
		font-size:10px;
	}
</style>
<h1>University#list</h1>
<p>Find me in app/views/university/list.html.erb</p>

<div class="container">
	
	<div class="center">
		<% @course.each do |course| %>

		<div class="row">
			<div class="col">
				<%= course.university_id %>
			</div>
			<div class="col">
				<%= course.name %>
			</div>
			<div class="col">
				<%= course.duration %>
			</div>
			<div class="col">
				<%= course.tuition_fee %>
			</div>
			<div class="col">
				<%= course.hostel_fee %>
			</div>
			<div class="col">
				<%= course.twelfth %>
			</div>
			<div class="col">
				<%= course.bachelors %>
			</div>
			<div class="col">
				<%= course.gre %>
			</div>
			<div class="col">
				<%= course.gmat %>
			</div>
			<div class="col">
				<%= course.acceptance_ratio %>
			</div>
			<div class="col">
				<%= course.melab %>
			</div>
			<div class="col">
				<%= course.cae %>
			</div>
			<div class="col">
				<%= course.cael %>
			</div>
			<div class="col">
				<%= course.sat %>
			</div>
			<div class="col">
				<%= course.ielts %>
			</div>
			<div class="col">
				<%= course.toefl%>
			</div>
			<div class="col">
				<%= course.pte %>
			</div>
			<div class="col">
				<%= course.lor %>
			</div>
			<div class="col">
				<%= course.essay %>
			</div>
			<div class="col">
				<%= course.cv %>
			</div>
			<div class="col">
				<%= course.document_required %>
			</div>
			<div class="col">
				<%= course.application_link %>
			</div>
			<div class="col">
				<%= course.application_fee %>
			</div>	
			<div class="col">
				<%= course.deadlines %>
			</div>	
			<div class="col">
				<%= course.average %>
			</div>
			<div class="col">
				<%= course.additional_info %>
			</div>			
			<div class="col">
				<%= link_to("Delete",{:action=>'delete',:id=>course.id}) %>
			</div>
			<div class="col">
			<%= link_to("Edit",{:action=>'edit',:id=>course.id}) %>
			</div>
		</div>
		<% end %>
	</div>
</div>
